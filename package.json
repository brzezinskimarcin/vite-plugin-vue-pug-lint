{
  "name": "vite-plugin-vue-pug-lint",
  "version": "1.0.0",
  "description": "vite pug-lint plugin for vue single file components",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "npm run build -- --watch src",
    "lint": "eslint src --ignore-path .gitignore",
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "homepage": "https://github.com/brzezinskimarcin/vite-plugin-vue-pug-lint",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brzezinskimarcin/vite-plugin-vue-pug-lint.git"
  },
  "keywords": [
    "vite-plugin",
    "vue",
    "pug",
    "pug-lint"
  ],
  "author": "Marcin Brzezi≈Ñski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brzezinskimarcin/vite-plugin-vue-pug-lint/issues"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard-version": {
    "scripts": {
      "posttag": "git push --follow-tags origin main && npm publish"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@rollup/pluginutils": "^4.1.2",
    "cheerio": "^1.0.0-rc.10",
    "htmlparser2": "^7.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/eslint": "^8.4.1",
    "@types/node": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "tsup": "^5.11.13",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "pug-lint": "^2.6.0",
    "vite": "^2.0.0"
  }
}
